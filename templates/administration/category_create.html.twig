{% extends("base.html.twig") %}

{% block body %}
    <div class="page-wrapper">
        <!-- Page header -->
        <div class="page-header d-print-none">
            <div class="container-xl">
                <div class="row g-2 align-items-center">
                    <div class="col">
                        <!-- Page pre-title -->
                        <div class="page-pretitle">
                            {{ "Create & edit"|trans }}
                        </div>
                        <h2 class="page-title">
                            Kategorie anlegen</h2>
                    </div>
                    <!-- Page title actions -->
                    <div class="col-auto ms-auto d-print-none">
                        <div class="btn-list">

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Page body -->
        <div class="page-body">
            <div class="container-xl">
                <div class="row row-cards">

                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">

                                <div class="mb-3">
                                    <label class="form-label">Kategorie-Bezeichnung</label>
                                    <input type="text" class="form-control required" name="example-text-input" placeholder="Kategorie-Bezeichnung">
                                </div>

                            </div>

                            <div class="card-footer text-end">
                                <div class="d-flex">
                                    <a href="#" class="btn btn-link">{{ "Cancel"|trans }}</a>
                                    <button type="submit" class="btn btn-primary ms-auto">{{ "Save"|trans }}</button>
                                </div>
                            </div>

                        </div>

                    </div>

                </div>
            </div>
        </div>

    </div>
{% endblock %}
